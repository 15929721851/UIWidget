<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <!--AlphaViewHelper默认按下透明(不可点击)透明度-->
        <item name="pressedAlpha">0.8</item>
        <item name="disabledAlpha">0.2</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="RadiusStyleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">@dimen/dp_text_size_main</item>
        <item name="rv_backgroundColor">@color/colorWhite</item>
        <item name="rv_backgroundPressedColor">@color/colorWhitePressed
        </item>
        <item name="rv_radiusHalfHeightEnable">true</item>
        <item name="rv_strokeColor">@color/colorTextBlack</item>
        <item name="rv_strokePressedColor">@color/colorTextBlackLight
        </item>
        <item name="rv_strokeWidth">@dimen/dp_line_size</item>
        <item name="rv_textColor">@color/colorTextBlack</item>
        <item name="rv_textPressedColor">@color/colorTextBlackLight</item>
    </style>

    <!--展开状态样式-->
    <style name="CollapsingTitleBarLayoutExpanded">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!--折叠状态TextView样式-->
    <style name="CollapsingTitleBarLayoutCollapsed">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!--展开状态样式-->
    <style name="CollapsingToolbarLayoutExpanded">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!--折叠状态TextView样式-->
    <style name="CollapsingToolbarLayoutCollapsed">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/dp_title_bar_height</item>
        <item name="title_statusBarPlusEnable">false</item>
        <item name="title_dividerHeight">@dimen/dp_line_size</item>
        <item name="title_dividerBackground">@color/colorLineGray</item>
        <item name="title_titleMainTextColor">@color/colorTextBlack</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:checked">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/dp_text_size_main</item>
    </style>
</resources>
